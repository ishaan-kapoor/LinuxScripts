#!/bin/sh

hour=$(date '+%I')
case "$hour" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac
min=$(date '+%M')
# [[ "$min" -lt 10 ]] && min="0$min"
m=$(date "+%p")
time="$hour:$min$m $icon"
[ "$min" -lt 1 ] && notify-send -t 1000 "Time" "$time"
echo "$time"
